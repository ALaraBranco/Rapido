@inherits Dynamicweb.Rendering.RazorTemplateBase<Dynamicweb.Rendering.RazorTemplateModel<Dynamicweb.Rendering.Template>>

@using Dynamicweb.Rapido.Blocks;
@using Dynamicweb.Rapido.Blocks.Components.General;
@using Dynamicweb.Rapido.Blocks.Components;

@functions {
    BlocksPage CommentPage = BlocksPage.GetBlockPage("Details");
}

@{
    if (!string.IsNullOrWhiteSpace(GetString("Ecom:Order.Customer.Comment")))
    {
        Block comment = new Block
        {
            Id = "Comment",
            SortId = 40,
            Design = new Design
            {
                RenderType = RenderType.Column,
                Size = "12",
                CssClass = "u-color-light-gray--bg u-border-bottom"
            },
            BlocksList = new List<Block> {
                new Block {
                    Id = "CommentTitle",
                    SortId = 10,
                    Component = new Heading { Title = Translate("Comment"), Level = 2, CssClass = "u-no-margin" }
                },
                new Block {
                    Id = "CommentText",
                    SortId = 20,
                    Design = new Design {
                        CssClass = "u-margin-bottom"
                    },
                    Component = new Text { Content = GetString("Ecom:Order.Customer.Comment") }
                }
            }
        };

        CommentPage.Add("MainContent", comment);
    }
}