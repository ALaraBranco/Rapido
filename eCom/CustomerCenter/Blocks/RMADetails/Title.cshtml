@inherits Dynamicweb.Rendering.RazorTemplateBase<Dynamicweb.Rendering.RazorTemplateModel<Dynamicweb.Rendering.Template>>

@using Dynamicweb.Rapido.Blocks
@using Dynamicweb.Rapido.Blocks.Components.General
@using Dynamicweb.Rapido.Blocks.Components

@functions {
    BlocksPage titlePage = BlocksPage.GetBlockPage("RMADetails");
}

@{
    bool titleHasAddContent = !string.IsNullOrWhiteSpace(GetString("Ecom:CustomerCenter.RMA.HasAddContent"));
    bool titleHasCancelContent = !string.IsNullOrWhiteSpace(GetString("Ecom:CustomerCenter.RMA.HasCancelContent"));

    Block title = new Block
    {
        Id = "Title",
        SortId = 10,
        Component = new Heading
        {
            Title = titleHasAddContent ? Translate("Create new request") : titleHasCancelContent ? Translate("Cancel request") : Translate("View request"),
            Icon = new Icon { Prefix = "fas", Name = titleHasAddContent ? "fa-plus-square" : titleHasCancelContent ? "fa-times" : "fa-eye" }
        }
    };

    titlePage.Add("RmaDetailsContainer", title);
}