@inherits Dynamicweb.Rendering.RazorTemplateBase<Dynamicweb.Rendering.RazorTemplateModel<Dynamicweb.Rendering.Template>>

@using Dynamicweb.Rapido.Blocks
@using Dynamicweb.Rapido.Blocks.Components.General
@using Dynamicweb.Rapido.Blocks.Components

@functions {
   BlocksPage formCommentPage = BlocksPage.GetBlockPage("RMADetails");
}

@{

    Block formComment = new Block
    {
        Id = "FormComment",
        SortId = 40,
        Design = new Design
        {
            CssClass = "u-margin-top--lg"
        },
        Component = new TextareaField { Id = GetString("ParagraphID") + "RMAComment", Name = GetString("ParagraphID") + "RMAComment", Rows = 3, Label = !string.IsNullOrWhiteSpace(GetString("Ecom:CustomerCenter.RMA.HasAddContent")) ? Translate("Additional info") : Translate("Customer comment") }
    };

    if (!string.IsNullOrWhiteSpace(GetString("Ecom:CustomerCenter.RMA.HasAddComment")) && string.IsNullOrWhiteSpace(GetString("Ecom:CustomerCenter.RMA.HasCancelContent")))
    {
       formCommentPage.Add("RmaDetailsForm", formComment);
    }
}